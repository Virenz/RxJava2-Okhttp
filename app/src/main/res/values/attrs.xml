<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="clockBackground" format="color"/>
    <attr name="clockTextColor" format="color"/>
    <attr name="textColor" format="color"/>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="titleCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="NavItem">
        <attr name="startIcon" format="reference"/>
        <attr name="action" format="string"/>
        <attr name="textColor"/>
        <attr name="actionState" format="string"/>
        <attr name="tint" format="color"/>
    </declare-styleable>

    <declare-styleable name="indicator">
        <attr name="selected_color" format="color"/>
        <attr name="unselected_color" format="color"/>
        <attr name="distance_from_two_indicator" format="dimension"/>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <attr name="indicatorDefStyleAttr" format="reference"/>

    <declare-styleable name="MagicRecyclerView">
        <attr name="header_layout" format="reference"/>
        <attr name="parallaxMultiplier" format="float"/>
        <attr name="footer_layout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SlopRefreshLayout">
        <attr name="slopValue" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FoldableTextView">
        <!--展开收缩动画的持续时间-->
        <attr name="animDuration" format="integer"/>
        <!--正文颜色-->
        <attr name="textColor"/>
        <!--正文文字大小-->
        <attr name="textSize" format="dimension"/>
        <!--展开状态文字颜色-->
        <attr name="flagColor" format="dimension"/>
        <!--展开状态文字大小-->
        <attr name="flagSize" format="dimension"/>
        <!--展开状态图片资源-->
        <attr name="toggleSrcOpen" format="reference"/>
        <!--折叠状态图片资源-->
        <attr name="toggleSrcClose" format="reference"/>
        <!--折叠时显示的最大行数-->
        <attr name="minLines" format="integer"/>
        <!--折叠标示的显示位置，只有中和右两种选择-->
        <attr name="flagGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="end" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension"  />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="integer" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>
</resources>